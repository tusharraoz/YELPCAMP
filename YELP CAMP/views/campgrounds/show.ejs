<%- include('../partials/header') %>
    <div class="container" style="margin-top: 40px;">
        <div class="row">
            <div class="col-md-3">
                <p class="lead">YelpCamp</p>
                <div class="list-group">
                    <li class="list-group-item active">Info 1</li>
                    <li class="list-group-item">Info 2</li>
                    <li class="list-group-item">Info 3</li>
                </div>
            </div>
            <div class="col-md-9">
                <div class="img-thumbnail">
                    <img src="<%= campGround.image %>" class="img-responsive" alt="">
                    <div class="caption-full">
                        <h4 class="float-right">â‚¹180.00/night</h4>
                        <h4><a style="color: blue;"><%= campGround.name %></a></h4>
                        <p style="color: brown;"><strong>Submitted by <em><%= campGround.author.username %></em></strong></p>
                        <p><%= campGround.desc %></p>
                    </div>
                </div>
                <div class="card" style="margin-top: 15px;margin-bottom: 30px; background: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.3));">
                    <div class="text-right">
                        <a class="btn btn-success" href="/campgrounds/<%= campGround._id %>/comments/new">Add a new comment</a>
                    </div>
                    <hr>
                    <% campGround.comments.forEach(function(comment){ %>
                        <div class="row">
                            <div class="col-md-12">
                                <p class="text-right">10 days ago</p>
                                <strong><%= comment.author.username %></strong> 
                                    <p class="text-left">
                                        <%= comment.text %> 
                                    </p>
                            </div>
                        </div>
                        
                    <% }) %>
                </div>
            </div>   
        </div>
            
            
            
           
    </div>
</body>
</html>
